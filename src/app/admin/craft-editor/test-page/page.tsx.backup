  onSave: () => void; 
  isSaving: boolean;
  hasUnsavedChanges: boolean;
}) => {
  return (
    <div className="bg-gray-900 border-b border-gray-700 p-4">
      <div className="flex items-center justify-between">
        <div className="flex items-center gap-2">
          <Link
            href="/admin"
            className="flex items-center gap-2 px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition-all"
          >
            <ArrowLeft className="h-4 w-4" />
            Exit Editor
          </Link>
          
          <div className="h-6 w-px bg-gray-600"></div>
          
          <span className="text-gray-400 text-sm">Test Page Editor</span>
          
          {hasUnsavedChanges && (
            <span className="text-yellow-400 text-xs bg-yellow-400/10 px-2 py-1 rounded">
              ‚Ä¢ Unsaved changes
            </span>
          )}
        </div>

        <div className="flex items-center gap-2">
          <Link
            href="/"
            target="_blank"
            className="flex items-center gap-2 px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition-all"
          >
            <Eye className="h-4 w-4" />
            View Live Site
          </Link>
          
          <button
            onClick={onSave}
            disabled={isSaving || !hasUnsavedChanges}
            className="flex items-center gap-2 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 disabled:opacity-50 disabled:cursor-not-allowed transition-all"
            title="Save Changes"
          >
            <Save className="h-4 w-4" />
            {isSaving ? 'Saving...' : 'Save Changes'}
          </button>
          
          <Link
            href="/admin"
            className="flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-all"
          >
            <Home className="h-4 w-4" />
            Admin Dashboard
          </Link>
        </div>
      </div>
    </div>
  );
};

// Tool Panel Component
const ToolPanel = ({ 
  onSaveChange 
}: { 
  onSaveChange?: () => void;
}) => {
  const { selectedComponent, setSelectedComponent } = useContext(SelectionContext);
  
  const [textColor, setTextColor] = useState('#ffffff');
  const [backgroundColor, setBackgroundColor] = useState('transparent');
  const [fontSize, setFontSize] = useState(48);
  const [isLoading, setIsLoading] = useState(false);
  const [hasChanges, setHasChanges] = useState(false);
  const [appliedChanges, setAppliedChanges] = useState(false);
  const [showGradientEditor, setShowGradientEditor] = useState(true); // Show by default
  const [gradientType, setGradientType] = useState<'text' | 'background'>('text');
  const [gradientDirection, setGradientDirection] = useState('to right');
  const [gradientColor1, setGradientColor1] = useState('#ff00ff');
  const [gradientColor2, setGradientColor2] = useState('#00ffff');
  const [gradientColor3, setGradientColor3] = useState('#ff00ff');
  const [useThreeColors, setUseThreeColors] = useState(false);

  // Debug: Log context values
  useEffect(() => {
    console.log('üîç Main page context values:', { 
      selectedComponent, 
      setSelectedComponent: typeof setSelectedComponent 
    });
  });

  // Debug: Log when selectedComponent changes
  useEffect(() => {
    console.log('üõ†Ô∏è ToolPanel selectedComponent changed:', selectedComponent);
  }, [selectedComponent]);

  // Neon theme colors from your website
  const neonColors = [
    '#00ffff', // Neon Cyan
    '#ff00ff', // Neon Pink/Magenta
    '#00ff00', // Neon Green
    '#ffff00', // Neon Yellow
    '#ff6600', // Neon Orange
    '#ffffff', // White
    '#8a2be2', // Blue Violet
    '#ff1493'  // Deep Pink
  ];

  // Live color update functions
  const updateTextColor = (color: string) => {
    setTextColor(color);
    window.postMessage({
      type: 'UPDATE_COMPONENT_STYLE',
      color: color
    }, '*');
    setHasChanges(true);
  };

  const updateBackgroundColor = (color: string) => {
    setBackgroundColor(color);
    window.postMessage({
      type: 'UPDATE_COMPONENT_STYLE',
      backgroundColor: color
    }, '*');
    setHasChanges(true);
  };

  const updateFontSize = (size: number) => {
    setFontSize(size);
    window.postMessage({
      type: 'UPDATE_COMPONENT_STYLE',
      fontSize: size
    }, '*');
    setHasChanges(true);
  };

  const resetComponent = () => {
    setTextColor('#ffffff');
    setBackgroundColor('transparent');
    setFontSize(48);
    setHasChanges(false);
    setAppliedChanges(false);
    
    window.postMessage({
      type: 'RESET_COMPONENT'
    }, '*');
  };

  if (!selectedComponent) {
    return (
      <div className="bg-gray-800 p-4 rounded border border-gray-700 h-full">
        <h3 className="text-lg font-semibold text-white mb-4">üõ†Ô∏è Style Tools</h3>
        <div className="text-center py-12">
          <div className="text-4xl mb-4">üé®</div>
          <p className="text-gray-400 mb-2 text-base">No component selected</p>
          <p className="text-gray-500 text-sm">Click on a component to start styling</p>
        </div>
      </div>
    );
  }

  if (selectedComponent !== 'TestPageHeading') {
    return (
      <div className="bg-gray-800 p-4 rounded border border-gray-700 h-full">
        <h3 className="text-lg font-semibold text-white mb-4">üõ†Ô∏è Style Tools</h3>
        <p className="text-gray-400 text-center py-8">
          Unknown component selected
        </p>
      </div>
    );
  }

  return (
    <div className="bg-gray-800 p-4 rounded border border-gray-700 h-full overflow-y-auto">
      <div className="flex items-center justify-between mb-6">
        <h3 className="text-lg font-semibold text-white">üõ†Ô∏è Style Tools</h3>
        <button
          onClick={() => setSelectedComponent(null)}
          className="text-gray-400 hover:text-white text-sm"
        >
          ‚úï Close
        </button>
      </div>

      <div className="bg-green-900/20 border border-green-600 rounded p-3 mb-6">
        <h4 className="text-green-400 font-medium text-sm mb-1">Selected Component</h4>
        <p className="text-green-300 text-sm">Test Page Heading</p>
        <p className="text-green-200 text-xs mt-1">üí° Click component again to edit text</p>
      </div>

      {/* Workflow Status */}
      <div className="flex items-center gap-2 mb-6 text-xs">
        <div className="flex items-center gap-1">
          <div className={`w-3 h-3 rounded-full ${hasChanges ? 'bg-yellow-500' : 'bg-gray-600'}`}></div>
          <span className="text-gray-400">Changes</span>
        </div>
        <div className="flex items-center gap-1">
          <div className={`w-3 h-3 rounded-full ${appliedChanges ? 'bg-blue-500' : 'bg-gray-600'}`}></div>
          <span className="text-gray-400">Applied</span>
        </div>
      </div>

      {/* Live updating tools - no loading state needed */}
      <div className="space-y-6">

          {/* Text Color Section */}
          <div className="space-y-3">
            <h4 className="text-sm font-medium text-white">Text Color</h4>
            <div>
              <input
                type="color"
                value={textColor.startsWith('linear-gradient') ? '#ffffff' : textColor}
                onChange={(e) => updateTextColor(e.target.value)}
                className="w-full h-10 rounded border border-gray-600 bg-gray-700"
              />
            </div>
            
            {/* Neon Color Presets */}
            <div className="grid grid-cols-4 gap-2">
              {neonColors.map((color, index) => (
                <button
                  key={index}
                  onClick={() => updateTextColor(color)}
                  className="w-full h-8 rounded border border-gray-600 hover:scale-105 transition-transform"
                  style={{ backgroundColor: color }}
                  title={color}
                />
              ))}
            </div>
          </div>

          {/* Background Color Section */}
          <div className="space-y-3">
            <h4 className="text-sm font-medium text-white">Background Color</h4>
            <div>
              <input
                type="color"
                value={backgroundColor === 'transparent' ? '#000000' : backgroundColor}
                onChange={(e) => updateBackgroundColor(e.target.value)}
                className="w-full h-10 rounded border border-gray-600 bg-gray-700"
              />
            </div>
            
            <div className="flex gap-2">
              <button
                onClick={() => updateBackgroundColor('transparent')}
                className="flex-1 py-2 px-3 bg-gray-700 hover:bg-gray-600 text-white rounded text-xs"
              >
                Transparent
              </button>
              <button
                onClick={() => updateBackgroundColor('#000000')}
                className="flex-1 py-2 px-3 bg-gray-700 hover:bg-gray-600 text-white rounded text-xs"
              >
                Black
              </button>
            </div>
          </div>

          {/* Font Size Section */}
          <div className="space-y-3">
            <h4 className="text-sm font-medium text-white">Font Size: {fontSize}px</h4>
            <input
              type="range"
              min="12"
              max="96"
              value={fontSize}
              onChange={(e) => updateFontSize(Number(e.target.value))}
              className="w-full"
            />
            <div className="flex justify-between text-xs text-gray-400">
              <span>12px</span>
              <span>96px</span>
            </div>
          </div>

          {/* Advanced Gradient Section */}
          <div className="space-y-3">
            <div className="flex items-center justify-between">
              <h4 className="text-sm font-medium text-white">‚ú® Advanced Gradients</h4>
              <button
                onClick={() => setShowGradientEditor(!showGradientEditor)}
                className="text-xs text-blue-400 hover:text-blue-300"
              >
                {showGradientEditor ? 'Hide' : 'Show'}
              </button>
            </div>
            
            {showGradientEditor && (
              <div className="space-y-4 p-4 bg-gray-900 rounded border border-gray-600">
                {/* Gradient Type Toggle */}
                <div className="flex gap-1">
                  <button
                    onClick={() => setGradientType('text')}
                    className={`flex-1 py-2 px-3 rounded text-xs font-medium ${
                      gradientType === 'text' 
                        ? 'bg-blue-600 text-white' 
                        : 'bg-gray-700 text-gray-300 hover:bg-gray-600'
                    }`}
                  >
                    Text Gradient
                  </button>
                  <button
                    onClick={() => setGradientType('background')}
                    className={`flex-1 py-2 px-3 rounded text-xs font-medium ${
                      gradientType === 'background' 
                        ? 'bg-blue-600 text-white' 
                        : 'bg-gray-700 text-gray-300 hover:bg-gray-600'
                    }`}
                  >
                    Background Gradient
                  </button>
                </div>

                {/* Direction Control */}
                <div>
                  <label className="block text-xs text-gray-300 mb-2">Direction</label>
                  <select
                    value={gradientDirection}
                    onChange={(e) => setGradientDirection(e.target.value)}
                    className="w-full p-2 bg-gray-700 border border-gray-600 rounded text-white text-sm"
                  >
                    <option value="to right">‚Üí Left to Right</option>
                    <option value="to left">‚Üê Right to Left</option>
                    <option value="to bottom">‚Üì Top to Bottom</option>
                    <option value="to top">‚Üë Bottom to Top</option>
                    <option value="to bottom right">‚Üò Diagonal Down Right</option>
                    <option value="to bottom left">‚Üô Diagonal Down Left</option>
                    <option value="to top right">‚Üó Diagonal Up Right</option>
                    <option value="to top left">‚Üñ Diagonal Up Left</option>
                  </select>
                </div>

                {/* Color Controls */}
                <div className="space-y-3">
                  <div className="flex items-center gap-2">
                    <label className="text-xs text-gray-300 w-16">Color 1:</label>
                    <input
                      type="color"
                      value={gradientColor1}
                      onChange={(e) => setGradientColor1(e.target.value)}
                      className="flex-1 h-8 rounded border border-gray-600"
                    />
                  </div>
                  
                  <div className="flex items-center gap-2">
                    <label className="text-xs text-gray-300 w-16">Color 2:</label>
                    <input
                      type="color"
                      value={gradientColor2}
                      onChange={(e) => setGradientColor2(e.target.value)}
                      className="flex-1 h-8 rounded border border-gray-600"
                    />
                  </div>

                  {/* Three Color Toggle */}
                  <div className="flex items-center gap-2">
                    <input
                      type="checkbox"
                      id="useThreeColors"
                      checked={useThreeColors}
                      onChange={(e) => setUseThreeColors(e.target.checked)}
                      className="rounded"
                    />
                    <label htmlFor="useThreeColors" className="text-xs text-gray-300">
                      Use 3 colors
                    </label>
                  </div>

                  {useThreeColors && (
                    <div className="flex items-center gap-2">
                      <label className="text-xs text-gray-300 w-16">Color 3:</label>
                      <input
                        type="color"
                        value={gradientColor3}
                        onChange={(e) => setGradientColor3(e.target.value)}
                        className="flex-1 h-8 rounded border border-gray-600"
                      />
                    </div>
                  )}
                </div>

                {/* Gradient Preview */}
                <div className="space-y-2">
                  <label className="text-xs text-gray-300">Preview:</label>
                  <div
                    className="w-full h-12 rounded border border-gray-600"
                    style={{
                      background: useThreeColors
                        ? `linear-gradient(${gradientDirection}, ${gradientColor1}, ${gradientColor2}, ${gradientColor3})`
                        : `linear-gradient(${gradientDirection}, ${gradientColor1}, ${gradientColor2})`
                    }}
                  />
                </div>

                {/* Quick Preset Buttons */}
                <div className="grid grid-cols-2 gap-2">
                  <button
                    onClick={() => {
                      setGradientColor1('#ff00ff');
                      setGradientColor2('#00ffff');
                      setUseThreeColors(false);
                    }}
                    className="py-2 px-3 bg-gradient-to-r from-pink-500 to-cyan-500 rounded text-white text-xs font-medium"
                  >
                    Neon Pink‚ÜíCyan
                  </button>
                  <button
                    onClick={() => {
                      setGradientColor1('#00ff00');
                      setGradientColor2('#ffff00');
                      setUseThreeColors(false);
                    }}
                    className="py-2 px-3 bg-gradient-to-r from-green-500 to-yellow-500 rounded text-white text-xs font-medium"
                  >
                    Neon Green‚ÜíYellow
                  </button>
                  <button
                    onClick={() => {
                      setGradientColor1('#ff00ff');
                      setGradientColor2('#00ffff');
                      setGradientColor3('#ff00ff');
                      setUseThreeColors(true);
                    }}
                    className="py-2 px-3 bg-gradient-to-r from-pink-500 via-cyan-500 to-pink-500 rounded text-white text-xs font-medium"
                  >
                    Neon Rainbow
                  </button>
                  <button
                    onClick={() => {
                      setGradientColor1('#8a2be2');
                      setGradientColor2('#ff1493');
                      setUseThreeColors(false);
                    }}
                    className="py-2 px-3 bg-gradient-to-r from-purple-600 to-pink-600 rounded text-white text-xs font-medium"
                  >
                    Purple‚ÜíPink
                  </button>
                </div>

                {/* Apply Gradient Button */}
                <button
                  onClick={() => {
                    const gradientValue = useThreeColors
                      ? `linear-gradient(${gradientDirection}, ${gradientColor1}, ${gradientColor2}, ${gradientColor3})`
                      : `linear-gradient(${gradientDirection}, ${gradientColor1}, ${gradientColor2})`;
                    
                    if (gradientType === 'text') {
                      updateTextColor(gradientValue);
                    } else {
                      updateBackgroundColor(gradientValue);
                    }
                  }}
                  className="w-full py-3 px-4 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-500 hover:to-purple-500 text-white rounded font-medium text-sm"
                >
                  üåà Apply {gradientType === 'text' ? 'Text' : 'Background'} Gradient
                </button>
              </div>
            )}
          </div>

          {/* Reset Button */}
          <div className="pt-4 border-t border-gray-700">
            <button
              onClick={resetComponent}
              className="w-full py-2 px-4 bg-red-600 hover:bg-red-500 text-white rounded text-sm font-medium"
            >
              üîÑ Reset to Default
            </button>
          </div>
        </div>
      </div>
    </div>
  );
};

export default function TestPageEditor() {
  const [allChangesSaved, setAllChangesSaved] = useState(true);
  const [isSaving, setIsSaving] = useState(false);

  // Save function for the toolbar
  const handleSave = async () => {
    setIsSaving(true);
    
    try {
      // Simulate save operation
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log('‚úÖ Test page saved successfully');
      setAllChangesSaved(true);
    } catch (error) {
      console.error('‚ùå Failed to save test page:', error);
    } finally {
      setIsSaving(false);
    }
  };

  // Handle clicking outside to deselect components
  const handlePageClick = (e: React.MouseEvent) => {
    const target = e.target as HTMLElement;
    
    // If clicking on the editor background (not on components or tool panel)
    if (target.classList.contains('editor-background') || target.closest('.editor-background')) {
      // Send message to components to auto-apply any pending text changes
      window.postMessage({ type: 'AUTO_APPLY_TEXT' }, '*');
    }
  };

  return (
    <>
      <SelectionProvider>
        <EditorProvider value={true}>
          {/* Full screen layout with top navigation */}
          <div className="min-h-screen bg-gray-900 text-white">
            
            {/* Top Navigation Toolbar */}
            <EditorToolbar 
              onSave={handleSave} 
              isSaving={isSaving}
              hasUnsavedChanges={!allChangesSaved}
            />
            
            {/* Main Editor Content */}
            <div className="flex h-[calc(100vh-73px)] overflow-hidden">
              
              {/* Left Editor Area */}
              <div className="flex-1 p-2" onClick={handlePageClick}>
                <div className="bg-gray-950 rounded border border-gray-700 p-4 h-full editor-background">
                  <h2 className="text-white text-base mb-4">üìÑ Page Preview</h2>
                  
                  {/* Clean page content - no navigation/footer */}
                  <div className="bg-black rounded p-6 h-[calc(100%-60px)] editor-background">
                    <TestPageHeading />
                    
                    <p className="text-gray-400 text-center mt-8 editor-background">
                      This is our simple test page with one editable heading
                    </p>
                    
                    <div className="mt-8 text-center editor-background">
                      <button 
                        className="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded"
                      >
                        Refresh to see changes
                      </button>
                    </div>
                  </div>
                </div>
              </div>

              {/* Right Tool Panel */}
              <div className="w-[400px] p-2">
                <ToolPanel 
                  onSaveChange={() => setAllChangesSaved(false)}
                />
              </div>
            </div>
          </div>
        </EditorProvider>
      </SelectionProvider>
    </>
  );
}
